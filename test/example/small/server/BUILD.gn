import("//build/lite/config/component/lite_component.gni")
import("../../../../config.gni")

SUBSYSTEM_DIR = "//foundation/communication/ipc"
IPC_CORE_C_ROOT = "$SUBSYSTEM_DIR/ipc/native/c"
IPC_C_DEMO_PATH = "$SUBSYSTEM_DIR/test/example/small"

executable("ipc_test_small_server") {
  output_dir = "$root_out_dir/tests/example/ipc_lite"
  sources = [
    "$IPC_C_DEMO_PATH/server/server_business_impl.c",
    "$IPC_C_DEMO_PATH/server/server_main.c",
  ]
  include_dirs = [
    "$IPC_CORE_C_ROOT/manager/include",
    "$IPC_C_DEMO_PATH/common",
    "$IPC_C_DEMO_PATH/server",
  ]
  deps = [ "$SUBSYSTEM_DIR/interfaces/innerkits/c/ipc:ipc_single" ]
  external_deps = [
    "bounds_checking_function:libsec_shared",
    "hilog_lite:hilog_lite",
    "samgr_lite:samgr",
  ]

  configs -= [ "//build/lite/config:clang_opt" ]
}
