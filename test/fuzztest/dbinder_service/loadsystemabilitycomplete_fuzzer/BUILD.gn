import("//build/config/features.gni")
import("//build/test.gni")

SUBSYSTEM_DIR = "//foundation/communication/ipc"

##############################fuzztest##########################################
ohos_fuzztest("LoadSystemAbilityCompleteFuzzTest") {
  module_out_path = "ipc/dbinder_service"
  fuzz_config_file =
    "../loadsystemabilitycomplete_fuzzer"
  include_dirs = [
    "$SUBSYSTEM_DIR/interfaces/innerkits/ipc_core/include",
    "$SUBSYSTEM_DIR/interfaces/innerkits/libdbinder/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "loadsystemabilitycomplete_fuzzer.cpp" ]
  deps = [
    "$SUBSYSTEM_DIR/interfaces/innerkits/libdbinder:libdbinder",
  ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

###############################################################################
group("ipc_loadsa_fuzztest") {
  testonly = true
  deps = [
    ":LoadSystemAbilityCompleteFuzzTest",
  ]
}
