#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
SUBSYSTEM_DIR = "//foundation/communication/ipc"

##############################fuzztest##########################################
ohos_fuzztest("IPCWorkThreadMockFuzzTest") {
  module_out_path = "ipc/mock"
  fuzz_config_file = "../ipcworkthreadmock_fuzzer"

  include_dirs = [
    "../../../include",
    "$SUBSYSTEM_DIR/utils/include",
  ]

  sources = [ "ipcworkthreadmock_fuzzer.cpp" ]

  deps = [ "$SUBSYSTEM_DIR/interfaces/innerkits/ipc_single:ipc_single_test" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "googletest:gmock",
    "googletest:gtest",
  ]

  defines = [
    "private = public",
    "protected = public",
  ]
  resource_config_file = "$SUBSYSTEM_DIR/test/resource/fuzztest/ohos_test.xml"
}
