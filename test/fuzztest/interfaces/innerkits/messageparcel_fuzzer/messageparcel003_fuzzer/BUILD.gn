import("//build/config/features.gni")
import("//build/test.gni")

SUBSYSTEM_DIR = "//foundation/communication/ipc"

##############################fuzztest##########################################
ohos_fuzztest("MessageParcel003FuzzTest") {
  module_out_path = "ipc/innerkits"
  fuzz_config_file = "../messageparcel003_fuzzer"

  cflags = [
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  include_dirs = [
    "../include",
    "$SUBSYSTEM_DIR/utils/include",
    "$SUBSYSTEM_DIR/ipc/native/src/core/framework/source/",
  ]

  sources = [ "messageparcel003_fuzzer.cpp" ]

  deps = [ "$SUBSYSTEM_DIR/test:ipc_single_test_static" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]

  defines = [
    "private = public",
    "protected = public",
  ]
}
