##############################fuzztest##########################################
ohos_fuzztest("BinderInvokerFuzzTest") {
  module_out_path = "ipc/ipc"
  fuzz_config_file = "../binderinvoker_fuzzer"
  include_dirs = [
    "../../core/include",
    "../../../../../../utils/include",
    "../../../../c/rpc/include",
    "../../../../src/core/include",
    "../../../../src/mock/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fstack-protector-strong",
  ]
  sources = [ "binderinvoker_fuzzer.cpp" ]

  deps = [
    "../../../../../../interfaces/innerkits/ipc_core:ipc_core",
    "../../../../../../interfaces/innerkits/ipc_single:ipc_single",
    "../../../../../../interfaces/innerkits/libdbinder:libdbinder",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "hitrace:libhitracechain",
    "ipc:ipc_core",
  ]
}

